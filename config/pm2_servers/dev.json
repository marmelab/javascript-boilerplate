{
    "apps": [{
            "autorestart": true,
            "env": {
                "NODE_ENV": "development"
            },
            "instances": 1,
            "name": "bpm_api-dev",
            "script": "./src/api/index.js",
            "node_args": "--harmony-async-await --require reify",
            "watch": [
                "./src/api",
                "./src/common",
                "config"
            ]
        }, {
            "args": [
                "--config=./src/frontend/webpack.config.babel.js",
                "--port=8080",
                "--hot",
            ],
            "autorestart": true,
            "env": {
                "NODE_ENV": "development"
            },
            "instances": 1,
            "name": "bpm_frontend-dev",
            "script": "./node_modules/.bin/webpack-dev-server"
        }, {
            "args": [
                "--config=./src/admin/webpack.config.babel.js",
                "--port=8081",
                "--hot",
            ],
            "autorestart": true,
            "env": {
                "NODE_ENV": "development"
            },
            "instances": 1,
            "name": "bpm_admin-dev",
            "script": "./node_modules/.bin/webpack-dev-server"
        }]
}
